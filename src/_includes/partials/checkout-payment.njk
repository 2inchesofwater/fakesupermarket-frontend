<details open name="paymentOptions-card" id="paymentOptions-card" class="paymentOptions-group disclosure-group">
	<summary>Debit/credit card</summary>
	<section class="disclosure-wrapper">
		<form id="payment-form">
		  <div class="form-row">
			  <div class="form-group">
			    <label for="card-number">Card number</label>
			    <!-- <p class="help">(Format advice)</p> -->
			    <input type="text" id="card-number" name="cardNumber" inputmode="numeric" pattern="[0-9 ]{13,19}" maxlength="19" autocomplete="cc-number" required placeholder="•••• •••• •••• ••••"/>
			  </div>
			  <div class="form-group">
			  	<p class="label">&nbsp;</p>
			    <p class="help" id="cards-accepted-help">Accepted credit and debit card types</p>			  	
			  	<ul id="cards-accepted">
			  		<li>{% include "partials/icons/visa.njk" %}</li>
			  		<li>{% include "partials/icons/mastercard.njk" %}</li>
			  	</ul>
			  </div>
			</div>

		  <div class="form-row">
		    <div class="form-group">
		      <label for="exp-month">Expiration Date</label>
		      <p class="help">For example, 10/28</p>	
		      <div class="inputs-horizontalGroup">
			      <input type="text" id="exp-month" class="input-sm" name="expDate" inputmode="numeric" pattern="(0[1-9]|1[0-2])\/\d{2,4}" maxlength="2" autocomplete="cc-exp" required placeholder="••" />
			      <input type="text" id="exp-slash" class="input-naked" name="expSlash" value="/" aria-hidden="true" tabindex="-1" />
			      <input type="text" id="exp-year" class="input-sm" name="expYear" inputmode="numeric" maxlength="4" autocomplete="cc-exp" required placeholder="••" />
		      </div>
		    </div>
		  </div>

			<div class="form-group">
			  <label for="cvv">Card security number</label>
			  <p class="help">The last 3 digits on the back of the card</p>	
			  <input type="text" id="cvv" class="input-sm" name="cvv" inputmode="numeric" pattern="\d{3,4}" maxlength="4" autocomplete="cc-csc" required placeholder="•••"/>
			</div>

			<div class="form-row">
				<label for="save-card" class="input-checkboxCustom">
					<input type="checkbox" id="save-card" name="saveCard" />
					<span class="checkboxCustom"></span>
					Remember this card for next time. <a>Read our (fake) privacy policy</a>
				</label>
			</div>	    

		  <!-- <button type="submit" class="btn btn-seconday">Check details are correct</button> -->
		</form>
	</section>
</details>

